<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_background"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准许放行"
        android:textSize="28sp"
        android:textColor="#2FBF84"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_back"
        android:background="@drawable/white_round_bg"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/area_gaoxin"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/area_saertu"
            android:text="高新区"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_saertu"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/area_gaoxin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="萨尔图"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_longfeng"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_gaoxin"
            app:layout_constraintEnd_toStartOf="@id/area_ranghulu"
            android:text="龙凤区"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_ranghulu"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/area_longfeng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_saertu"
            android:text="让胡路区"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_honggang"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_longfeng"
            app:layout_constraintEnd_toStartOf="@id/area_ranghulu"
            android:text="红岗区"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_datong"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/area_honggang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_ranghulu"
            android:text="大同区"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_lindian"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_honggang"
            app:layout_constraintEnd_toStartOf="@id/area_datong"
            android:text="林甸县"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/area_dumeng"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/area_lindian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_datong"
            android:text="杜蒙县"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_zhaoyuan"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_lindian"
            app:layout_constraintEnd_toStartOf="@id/area_dumeng"
            android:text="肇源县"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/area_zhaozhou"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/area_zhaoyuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_dumeng"
            android:text="肇州县"
            android:textSize="26dp"
            android:background="@drawable/gray_bg"
            android:textColor="#005096"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintBottom_toTopOf="@id/content"
        android:background="@drawable/blue_tv_bg"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="选择前往属地"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"/>
</android.support.constraint.ConstraintLayout>